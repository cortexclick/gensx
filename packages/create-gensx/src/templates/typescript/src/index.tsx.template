import { gsx } from "gensx";
import { ChatCompletion, OpenAIProvider } from "@gensx/openai";

interface RespondProps {
  userInput: string;
}
type RespondOutput = string;

function Respond({ userInput }: gsx.Args<RespondProps, RespondOutput>) {
  return <ChatCompletion model="gpt-4o-mini" messages={[{ role: "system", content: "You are a helpful assistant. Respond to the user's input." }, { role: "user", content: userInput }]} />;
}

async function Workflow(_: gsx.Args<{}, string>) {
  return (
    <OpenAIProvider apiKey={process.env.OPENAI_API_KEY}>
      <Respond userInput="Hi there! Say 'Hello, World!' and nothing else." />
    </OpenAIProvider>
  );
}

const result = await gsx.execute<string>(<Workflow />);
console.log(result);
