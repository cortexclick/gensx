{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "gensx",
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["./*.ts", "./*.tsx", "./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules"]
}
